<div class="container">

  <div class="jumbotron">
    <h1>Order Your Burger </h1>
    <p>Burger Order for Pickup.</p>
    <br>
    <h2>Select a Burger!</h2>
    <panel>
      <form class="create-form">
        <div class="form-group">
          <label for="newburger">Order Fresh Burger</label>
          {{!-- <input type="text" id="newburger" name="burger"> --}}
          <select data-placeholder="" id="newBurger" name="burger">
            <option value="Nada Buger" selected>Select a Burger</option>
            <option value="Hamburger" selected>Hamburger</option>
            <option value="Cheeseburger" selected>Cheeseburger</option>
            <option value="Banh Mi Burger" selected>Banh Mi Burger</option>
            <option value="Tofu Burger" selected>Tofu Buger</option>
            <option value="Black Bean Burger" selected>Black Bean Burger</option>
            <option value="Impossible Burger" selected>Impossible Burger</option>
          </select>

          <button type="submit" class="btn btn-success" id="addburger">
            <span class="fa fa-thumbs-up"></span>
          </button>
        </div>
      </form>
    </panel>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="leftside"><strong>Order Your Burger</strong>
          <p>send order for pick-up</p>
        </div>
        <div class="panel-body">

          <ul>
            {{#each burgers}}
            {{#unless devoured}}

            <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-sm-6">
  <div class="panel panel-default">
    <div class="panel-heading" id="rightside"><strong>Burger is Ready!</strong>
      <p>remove order when delivered</p>
    </div>
    <div class="panel-body">

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
          data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
        <hr>
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
</div>