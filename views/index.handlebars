{{!--
Setup the `index.handlebars` to have the template that Handlebars can render onto.

Create a button in `index.handlebars` that will submit the user input into the database. 
--}}
<div class="container">
  <div class="jumbotron">
    <h1>Order Burger for Pick-up!</h1>
    <p>Burger Orders, Burger Pick-up.</p>
    <br>
    <h2>Select your Burger!</h2>
    <panel>
      <form class="create-form">
        <div class="form-group">
          <label for="newBurger">Order Dat Fresh Burger</label>
          <input type="text" id="newburger" name="burger">
          <button type="sumbit" class="btn btn-success" id="addburger">
            <span class="fa fa-thubs-up"></span>
          </button>

          <select data-placeholder="" id="newBurger" name="burger">
            <option value="Nada Buger" selected>Select a Burger</option>
            <option value="Hamburger" selected>Hamburger</option>
            <option value="Cheeseburger" selected>Cheeseburger</option>
            <option value="Banh Mi Burger" selected>Banh Mi Burger</option>
            <option value="Tofu Burger" selected>Tofu Buger</option>
            <option value="Black Bean Burger" selected>Black Bean Burger</option>
            <option value="Impossible Burger" selected>Impossible Burger</option>
          </select>

        </div>
      </form>
    </panel>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="leftside"><strong>ORDER DAT BURGER!</strong></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            â€‹
            <span> {{this.id}} - {{this.burger_name}}</span>
            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="rightside"><strong>DEVOUR DA BURGER(S)!</strong>
        </div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <span> {{this.id}} - {{this.burger_name}}</span>
            <button type="button" class="trashburger btn btn-warning" id="wastebutton" data-id="{{this.id}}"
              data-newDevoured=""="{{devoured}}"><span class="fa fa-trash"></span></button>
            <hr>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div> 